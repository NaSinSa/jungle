<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>

  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <% flash.each do |key, value| %>
    <% if key == 'notice' %>
      <div class="<%= flash_class(key) %> panel panel-info">
        <div class="panel-heading">
          <%= value %>
        </div>
      </div>
    <% end %>  
  <% end %>
  
  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>

  </div>

</section>
